<header>
    <nav class="row p-3">
        <div id="out-account" class="row">
            <div class="col-lg-8 col-6"></div>
            <div class="col-lg-2 col-3">
                <button class="btn btn-success" id="signin-nav">Iniciar Sesión</button>
            </div>
            <div class="col-lg-2 col-3">
                <button class="btn btn-warning" id="signup-nav">Crear Cuenta</button>
            </div>
        </div>
        <div id="in-account" class="row d-none">
            <div class="col-lg-10 col-9"></div>
            <div class="col-lg-2 col-3">
                <button class="btn btn-danger" id="signout-nav">Desconectar</button>
            </div>
        </div>
    </nav>
</header>
<main>
    <div id="no-account-div" class="text-center fs-1 bg-danger p-4">
        <h2>Necesita loguearse o crear una cuenta para ingresar!</h2>
    </div>
    <div id="account-div" class="d-none">
        <div class="bg-light p-3 border border-dark">
            <div class="rounded bg-secondary mt-2 p-2">
                <div id="auth-div">
                    <form id="formAuth">
                        <h2 id="signin-title" class="fs-bold">Inicio de Sesión</h2>
                        <h2 id="signup-title">Registro de Cuenta</h2>
                        <label for="email" class="form-label">Email:</label>
                        <input type="email" name="email" class="form-control" id="email" required>
                        <br />
                        <label for="password" class="form-label">Contraseña:</label>
                        <input type="text" name="password" class="form-control" id="password" required>
                        <div class="mt-4 d-flex justify-content-center">
                            <button type="submit" formaction="sign-in" id="signin-button"
                                class="btn btn-success">Iniciar sesión</button>
                            <button type="submit" formaction="sign-up" id="signup-button" class="btn btn-warning">Crear
                                Cuenta</button>
                        </div>
                    </form>
                </div>
                <div id="output-div" class="d-none">
                    <div>
                        <output id="user-output" class="fs-2"></output>
                        <button class="btn btn-success d-none" id="signin-registered-user-button">Iniciar Sesión</button>
                    </div>
                </div>
                <div id="auth-error" class="d-flex justify-content-center d-none">
                    <h2 id="error-title"></h2>
                    <button id="go-back-button" type="button" class="ms-3 btn btn-warning">Atrás</button>
                </div>
            </div>
            <div id="formAdd" class="d-none p-3">
                <h2>Agregar un producto</h2>
                <form id="form_upload_product" action="/" method="post">
                    <label for="name_product">Nombre Producto</label>
                    <input type="text" name="title" id="name_product">
                    <br />
                    <br />
                    <label for="price_product">Precio Producto</label>
                    <input type="text" name="price" id="price_product">
                    <br />
                    <br />
                    <label for="url_product">URL Imagen Producto</label>
                    <input type="text" name="thumbnail" id="url_product">
                    <br />
                    <br />
                    <button type="submit" class="btn btn-success">Agregar</button>
                </form>
            </div>
        </div>
    </div>
    <div>
        <h2>Productos</h2>
        <table class="table" id="tableProducts">
            <tr>
                <th>Nombre</th>
                <th>Precio [US$]</th>
                <th>Imagen</th>
            </tr>
            {{#if isEmpty}}
            <tr>
                <td>No hay productos subidos</td>
            </tr>
            {{/if}}
        </table>
    </div>

